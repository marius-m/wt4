<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Hyperlink?>
<JFXDialog
        fx:id="jfxDialog"
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="lt.markmerkk.ui_2.ClockEditController">
   <content>
       <JFXDialogLayout fx:id="jfxDialogLayout">
           <heading>
               <Label styleClass="dialog-header">Running clock</Label>
           </heading>
           <body>
               <VBox>
                   <children>
                   <Label styleClass="mini-label">
                       From
                   </Label>
                   <HBox alignment="CENTER_LEFT">
                       <children>
                           <JFXDatePicker
                                   fx:id="jfxDateFrom"
                                   overLay="true"
                                   defaultColor="#E91E63">
                           </JFXDatePicker>
                           <JFXTimePicker
                                   HBox.hgrow="ALWAYS"
                                   fx:id="jfxTimeFrom"
                                   overLay="true"
                                   defaultColor="#E91E63">
                           </JFXTimePicker>
                           <JFXButton fx:id="jfxSubtractFrom">-</JFXButton>
                           <JFXButton fx:id="jfxAppendFrom">+</JFXButton>
                       </children>
                   </HBox>
                   <Label styleClass="mini-label">
                       <padding>
                           <Insets top="12.0" />
                       </padding>
                       To
                   </Label>
                   <HBox alignment="CENTER_LEFT">
                       <children>
                           <JFXDatePicker
                                   fx:id="jfxDateTo"
                                   overLay="true"
                                   defaultColor="#E91E63">
                           </JFXDatePicker>
                           <JFXTimePicker
                                   fx:id="jfxTimeTo"
                                   overLay="true"
                                   defaultColor="#E91E63">
                           </JFXTimePicker>
                           <JFXButton fx:id="jfxSubtractTo">-</JFXButton>
                           <JFXButton fx:id="jfxAppendTo">+</JFXButton>
                       </children>
                   </HBox>
                       <HBox alignment="CENTER_LEFT">
                           <padding>
                               <Insets top="30.0"/>
                           </padding>
                           <children>
                               <JFXTextField
                                       fx:id="jfxTextFieldTicket"
                                       minWidth="120"
                                       prefWidth="120"
                                       focusColor="#e91e63"
                                       labelFloat="true"
                                       promptText="Ticket ID"
                                       unFocusColor="black"
                                       HBox.hgrow="NEVER"
                                       VBox.vgrow="NEVER">
                               </JFXTextField>
                               <Label fx:id="jfxTextTicketDescription" HBox.hgrow="ALWAYS">
                                   <padding>
                                       <Insets left="10.0" right="10.0" />
                                   </padding>
                               </Label>
                               <Hyperlink fx:id="jfxTextFieldTicketLink"></Hyperlink>
                               <JFXButton fx:id="jfxButtonSearch"></JFXButton>
                           </children>
                       </HBox>
                       <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                           <padding>
                               <Insets
                                       top="26.0"
                                       right="6.0"
                               />
                           </padding>
                           <children>
                               <JFXTextArea
                                       focusColor="#e91e63"
                                       labelFloat="true"
                                       promptText="Comment"
                                       unFocusColor="black"
                                       prefRowCount="3"
                                       fx:id="jfxTextFieldComment"
                                       HBox.hgrow="ALWAYS"
                                       VBox.vgrow="NEVER">
                               </JFXTextArea>
                           </children>
                       </HBox>
                       <HBox alignment="CENTER">
                           <padding>
                               <Insets
                                       top="6.0"
                               />
                           </padding>
                           <children>
                               <Label
                                       fx:id="jfxHint"
                                       styleClass="mini-label"
                                       textAlignment="CENTER">
                                   <padding>
                                       <Insets top="6.0"/>
                                   </padding>
                                   Duration: 1m 30m
                               </Label>
                           </children>
                       </HBox>
                   </children>
               </VBox>
           </body>
           <actions>
               <JFXButton fx:id="jfxButtonDismiss" styleClass="dialog-accept">DISMISS</JFXButton>
               <JFXButton fx:id="jfxButtonSave" styleClass="dialog-accept">SAVE</JFXButton>
           </actions>
       </JFXDialogLayout>
   </content>
</JFXDialog>
